{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": ".test-dist",
    "module": "commonjs",
    "target": "ES2019",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "declaration": false,
    "incremental": false
  },
  "include": ["lib/mdx.ts", "lib/mdx-sanitize.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", ".next", "out", ".test-dist"]
}
